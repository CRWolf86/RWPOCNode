<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <!-- Bootstrap -->
        <link href="/assets/bootstrap/css/bootstrap.css" rel="stylesheet">
        <!--touchspin-->
        <link rel="stylesheet" href="/assets/bootstrap/touchspin/dist/jquery.bootstrap-touchspin.min.css">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="/assets/css/main.css">
        <title>New-Edit_WoD</title>
    </head>
    <body>
            <% include partial/header.ejs %>    
        <div class="container">
            <form id="newWOD">
                <p>
                    Wod Name: <input type="text" name="wodName" value="" id="wodName"required>
                </p>
                <p>
                    Rest between laps: <input type="number" name="restSec"id="restSec" value="Seconds" placeholder="Seconds">
                </p>
                <p>
                    Number of Laps<input id="demo3" type="text" value="" name="demo3" required>
                </p>
                <hr>
                <div class="mitad">
                    <p><input type="radio" name="type" id="warmup">This is a warm up</p>
                </div>
                <div class="mitad"
                    ><p><input type="radio" name="type" id="Wod">This is a WOD</p>
                </div>
                <div class="mitad">
                    <p>
                        Exercise time: <input type="text" name="extime" id="extime" value="" required>
                    </p>
                </div>
                <div class="mitad">
                        Rest Time: <input type="text" name="restime" id="restime" value="" required>
                </div>
                <p>
                    Youtube Video: <input type="url" name="youtubevid" id="youtubevid">
                </p>
                <p>
                    Select Lap: <input type="number" name="selectlap" id="selectlap">
                </p>
                <div class="boton">
                    <button type="submit" class="btn btn-default" id="submit">Add Excercise</button>
                </div>
            </p>
            </form>
            <div class="tablas">
                <table class="table table-responsive table-striped">
                    <thead>
                        <tr>
                            <th>Excercise name</th>
                            <th>Lap number</th>
                            <th>Time</th>
                            <th>Video</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                                <% for(var i=0; i < exercise.length; i++){ %>
                                    <tr style="border: 1px solid; border-color: black;"></tr>
                                        <td> <%= exercise[i].wodName %>  </td>
                                        <td> <%= exercise[i].selectlap %>  </td>
                                        <td> <%= exercise[i].extime %>  </td>
                                        <td> <%= exercise[i].youtubevid %>  </td>
                                        <td id="borrar"> Delete  </td>
                                    </tr>
                                   <% } %>
                        </tr>
                    </tbody>
                </table>
            </div>
            <footer>
                <hr>
                <p>All right reserved - rulesware 2018</p>
            </footer>
        </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/assets/js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/assets/bootstrap/js/bootstrap.js"></script>
    <!--touchspin-->
    <script src="/assets/bootstrap/touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>
    <!--P5-->
    <script src="/assets/js/p5.min.js"></script>
    <script src="/assets/js/p5.dom.js"></script>
    <!--Custom Script-->
    <script src="/assets/js/main.js"></script>
    <script>
        $("input[name='demo3']").TouchSpin();
    </script>
    </body>
</html>